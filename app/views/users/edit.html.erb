<% provide(:title, 'Einstellungen') %>
<div class="banner">
  <div class="container">

    <div class="row">

      <div class="span5 konto-box">
        <div class="span4">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>">
              <%= value %>
            </div>
          <% end %>
        </div>
        <div class="span4">
          <h2>Dein Konto</h2>
        </div>
        <div class="span4">
          <h3>Name:</h3>
          <h4><%= "#{@user.vorname} #{@user.nachname}" %></h4>
        </div>
        <div class="span4">
          <h3>Emailadresse:</h3>
          <h4><%= "#{@user.email}" %></h4>
        </div>
        <div class="span3">
            <%= link_to "Konto freischalten", '#', class: "btn btn-large btn-success btn-form" %>
          </div>


      </div>

      <div class="span5 offset6 edit-box">
        <div class="span5">
          <h2>Ändere deine Daten</h2><br>
        </div>
    <%= form_for(@user) do |f| %>
          <div class="span4">
            <%= render 'layouts/error_messages' %>
          </div>
          
          <div class="span4">
            <%= f.label :email, "Emailadresse" %>
            <%= f.text_field :email, title: "Gib hier deine neue Emailadresse ein und bestätige sie mit deinem Passwort und deiner Passwort-Wiederholung." %>
          </div>

          <div class="span4">
            <%= f.label :password, "Passwort" %>
            <%= f.password_field :password, title: "Gib dein neues Passwort ein und bestätige es im Feld Passwort-Wiederholung. Deine Emailadresse muss immer ausgefüllt sein." %>
          </div>

          <div class="span4">
            <%= f.label :password_confirmation, "Passwort-Wiederholung" %>
            <%= f.password_field :password_confirmation, title: "Bitte gib dein Passwort ein zweites Mal ein. Das schützt dich vor unabsichtlichen Schreibfehlern." %>
          </div>

          <div class="span2">
            <%= f.submit "Änderungen speichern", class: "btn btn-large btn-success btn-form" %>
          </div>
    <% end %>
      </div>

    </div>
  </div>
</div>

