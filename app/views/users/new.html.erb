<div class="row container up-and-away">
  <div class="span5 offset1 signup-box">
    <div class="span4">
      <h2>Registrierung</h2></br>
    </div>
<%= form_for(@user) do |f| %>
      <div class="span4">
        <%= render 'layouts/error_messages' %>
      </div>
      
      <div class="span2">
        <%= f.text_field :vorname, placeholder: "Vorname", autofocus: true %>
      </div>

      <div class="span2">      
        <%= f.text_field :nachname, placeholder: "Nachname" %>
      </div>

      <div class="span4">
        <%= f.text_field :email, placeholder: "Emailadresse" %>
      </div>

      <div class="span4">
        <%= f.password_field :password, placeholder: "Passwort" %>
      </div>

      <div class="span4">
        <%= f.password_field :password_confirmation, placeholder: "Passwort-Wiederholung" %>
      </div>

      <div class="span2">
        <%= f.submit "Profil erstellen", class: "btn btn-large btn-success btn-form" %>
      </div>
<% end %>
  </div>

  <div class="span4 advantage-box">
    <div class="span4">
      <h2>Deine Vorteile</h2>
      <ul class="checkmarks">
