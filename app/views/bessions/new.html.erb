<% if signed_in? %>
  <div class="banner">
    <div class="container">
    
      <div class="row sessions-end-row">
        <div class="span3 offset4 sessions-end-box center">
          <p id="bosslogin">Bitte <%= link_to "melde dich ab", signout_path, method: "delete" %> um deinen BewerbungsClip mit dem Kennwort anzusehen.</p>
            <%= link_to "Abmelden", signout_path, method: "delete", class: "btn btn-large btn-success btn-form" %>
        </div>
      </div>

    </div>
  </div>

<% else %>
  <div class="banner">
    <div class="container">

      <div class="row">
        <h1 id="startseite_h1">Darf ich mich vorstellen?!</h1>
        <h2 id="startseite_h2">Mein pers√∂nlicher BewerbungsClip:</h2>
      </div>
    
      <div class="row ">
          <div class="span4 offset7 boss-box">
            <p id="bosslogin">Geben Sie hier Ihr <br>Kennwort ein</p></br>
          <%= form_for(:bession, url: bessions_path) do |f| %>
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>">
                  <%= value %>
                </div>
              <% end %>

            <%= f.text_field :bosskey, placeholder: "Kennwort", autofocus: true %>

            <%= f.submit "BewerbungsClip ansehen", class: "btn btn-large btn-success btn-form" %>
          <% end %>
          </div>
      </div>

    </div>
  </div>

<% end %>