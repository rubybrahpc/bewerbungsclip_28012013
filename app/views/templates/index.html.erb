<% provide(:title, @user.name) %>
<div class="banner">
</div>
  <div class="container">

    <div class="row templates-show-row">
      <div class="span12 user-show-box">
        <div class="span11">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>">
              <%= value %>
            </div>
          <% end %>
        </div>

    <% if @user.templates.any? %>
      <div class="span12">
        <h1>meine Profile</h1><br>
      </div>

        <table>
          <td class="el1"><h4>BewerbungsClip für</h4></td>
          <td class="el2"><h4>BewerbungsKey</h4></td> 
          <td class="el3"><h4>erstellt am</h4></td>
    <% else %>
      <div class="span12">
        <h1><%= @user.name %></h1>
      </div>
    <% end %>

        <% @user.templates.each do |template| %>
          <tr>
            <td class="el1"><h4><%= template.for_company %>
              <% if template.for_company.empty? %>Allgemeines Profil<% end %></h4></td>
            <td class="el2"><h4><%= template.bosskey %></h4></td>
            <td class="el3"><h4><%= template.created_at.strftime("%d.%m. %Rh") %></h4></td>
            <td class="el4"><%= link_to 'anzeigen', template, class: "btn btn-small btn-primary size" %></td>
            <td class="el5"><%= link_to 'löschen', template, class: "btn btn-small btn-danger size", method: :delete, data: { confirm: 'Willst du das Profil wirklich unwiderruflich löschen?' } %></td>
          </tr>
        <% end %>
        </table><br>

      <div class="span6">
      <%= link_to 'neues Profil erstellen', new_template_path(user_id: @user.id, vorname: @user.vorname, nachname: @user.nachname, fingerprint: @user.fingerprint), class: "btn btn-large btn-warning btn-form" %>
      </div>
      </div>
    </div>
  </div>